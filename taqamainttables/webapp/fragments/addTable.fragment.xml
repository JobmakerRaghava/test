<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog title="Add Table" contentWidth="80%" contentHeight="60%" resizable="true" draggable="true">
        <content>
            <form:SimpleForm editable="true">
                <Label text="{i18n>tablename}" />
                <Input width="30%" id="idTablenameInput" required="true" value="{newTable>/TableName}" maxLength="40"/>
            </form:SimpleForm>

            <form:SimpleForm editable="true" columnsL="4" columnsM="3" layout="ColumnLayout" title="Columns Details">
                <Label text="{i18n>Column1}"/>
                <Input required="true" value="{newTable>/Column1}" id="idColumnInput" maxLength="60" />
                <Label text="{i18n>Column2}"/>
                <Input value="{newTable>/Column2}" maxLength="60"/>
                <Label text="{i18n>Column3}"/>
                <Input value="{newTable>/Column3}" maxLength="60"/>
                <Label text="{i18n>Column4}"/>
                <Input value="{newTable>/Column4}" maxLength="60"/>
                <Label text="{i18n>Column5}"/>
                <Input value="{newTable>/Column5}" maxLength="60"/>
                <Label text="{i18n>Column6}"/>
                <Input value="{newTable>/Column6}" maxLength="60"/>
                <Label text="{i18n>Column7}"/>
                <Input value="{newTable>/Column7}"  maxLength="60"/>
                <Label text="{i18n>Column8}"/>
                <Input value="{newTable>/Column8}" maxLength="60"/>
                <Label text="{i18n>Column9}"/>
                <Input value="{newTable>/Column9}"  maxLength="60"/>
                <Label text="{i18n>Column10}"/>
                <Input value="{newTable>/Column10}"  maxLength="60"/>
                <Label text="{i18n>Column11}"/>
                <Input value="{newTable>/Column11}"  maxLength="60"/>
                <Label text="{i18n>Column12}"/>
                <Input value="{newTable>/Column12}"  maxLength="60"/>
                <Label text="{i18n>Column13}"/>
                <Input value="{newTable>/Column13}"  maxLength="60"/>
                <Label text="{i18n>Column14}"/>
                <Input value="{newTable>/Column14}"  maxLength="60"/>
                <Label text="{i18n>Column15}"/>
                <Input value="{newTable>/Column15}"  maxLength="60"/>
                <Label text="{i18n>Column16}"/>
                <Input value="{newTable>/Column16}"  maxLength="60"/>
            </form:SimpleForm>
        </content>
        <buttons>
            <Button text="{i18n>create}" press="onCreate" />
            <Button id="idCLOSEButton" text="{i18n>close}" press="onClose" />
        </buttons>
    </Dialog>
</c:FragmentDefinition>